FROM node:22-alpine AS build-stage
WORKDIR /app

RUN apk add --no-cache jq

RUN corepack enable && corepack prepare pnpm@latest --activate

COPY src/Corelai.Prime.App .

COPY local/prime/app.settings.local.json ./app.override.json

RUN jq -s '.[0] * .[1]' app.settings.json app.override.json > merged.config.json \
    && mv merged.config.json app.settings.json && rm app.settings.json

RUN echo "üìÅ Listing di /app dopo COPY:" && ls -lah /app

RUN pnpm install --frozen-lockfile

RUN pnpm run build


FROM nginx:alpine AS production-stage

COPY ./local/prime/nginx-local.conf /etc/nginx/conf.d/default.conf

COPY --from=build-stage /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]